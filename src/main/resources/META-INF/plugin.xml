<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <id>dev.murek.elixirij</id>
  <name>Elixirij</name>
  <vendor url="https://murek.dev" email="marek.kaput@outlook.com">Marek Kaput</vendor>

  <depends>com.intellij.modules.platform</depends>
  <depends optional="true" config-file="dev.murek.elixirij-spellchecker.xml">com.intellij.spellchecker</depends>

  <resource-bundle>messages.ExBundle</resource-bundle>

  <extensions defaultExtensionNs="com.intellij">
    <fileType name="Elixir"
              implementationClass="dev.murek.elixirij.lang.ExFileType"
              fieldName="INSTANCE"
              language="Elixir"
              extensions="ex"
              hashBangs="elixir"/>

    <fileType name="Elixir Script"
              implementationClass="dev.murek.elixirij.lang.ExsFileType"
              fieldName="INSTANCE"
              extensions="exs"/>

    <lang.commenter language="Elixir"
                    implementationClass="dev.murek.elixirij.ide.ExCommenter"/>

    <lang.braceMatcher language="Elixir"
                       implementationClass="dev.murek.elixirij.ide.ExBraceMatcher"/>

    <lang.quoteHandler language="Elixir"
                       implementationClass="dev.murek.elixirij.ide.ExQuoteHandler"/>

    <lang.foldingBuilder language="Elixir"
                         implementationClass="dev.murek.elixirij.ide.folding.ExFoldingBuilder"/>

    <formattingService implementation="dev.murek.elixirij.ide.formatter.ExMixFormatService"/>

    <typedHandler implementation="dev.murek.elixirij.ide.ExTypedHandlerDelegate"/>
    <backspaceHandlerDelegate implementation="dev.murek.elixirij.ide.ExBackspaceHandlerDelegate"/>

    <lang.parserDefinition language="Elixir"
                           implementationClass="dev.murek.elixirij.lang.ExParserDefinition"/>

    <lang.syntaxHighlighterFactory language="Elixir"
                                   implementationClass="dev.murek.elixirij.ide.highlighting.ExSyntaxHighlighter$Factory"/>

    <colorSettingsPage implementation="dev.murek.elixirij.ide.highlighting.ExColorSettingsPage"/>

    <additionalTextAttributes scheme="Default" file="colorSchemes/ElixirDefault.xml"/>
    <additionalTextAttributes scheme="Darcula" file="colorSchemes/ElixirDarcula.xml"/>
    <additionalTextAttributes scheme="Dark" file="colorSchemes/ElixirDark.xml"/>
    <additionalTextAttributes scheme="High contrast" file="colorSchemes/ElixirHighContrast.xml"/>

    <annotator language="Elixir"
               implementationClass="dev.murek.elixirij.ide.highlighting.ExHighlightingAnnotator"/>
    <annotator language="Elixir"
               implementationClass="dev.murek.elixirij.ide.highlighting.ExEscapeSequenceAnnotator"/>

    <platform.lsp.serverSupportProvider implementation="dev.murek.elixirij.lsp.ExLspServerSupportProvider"/>

    <projectConfigurable
      parentId="language"
      instance="dev.murek.elixirij.ExConfigurable"
      id="dev.murek.elixirij.settings"
      key="configurable.elixir.displayName"/>

    <notificationGroup id="Elixirij" displayType="BALLOON" key="notification.group.elixirij"/>
  </extensions>

  <actions>
    <action id="Elixirij.CheckExpertUpdatesAction"
            class="dev.murek.elixirij.ide.actions.CheckExpertUpdatesAction"/>
  </actions>
</idea-plugin>
