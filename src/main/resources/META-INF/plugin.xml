<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>dev.murek.elixirij</id>
    <name>ElixirIJ</name>
    <vendor>Marek Kaput</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.redhat.devtools.lsp4ij</depends>

    <resource-bundle>messages.ExBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Elixir"
                  implementationClass="dev.murek.elixirij.ExFileType"
                  fieldName="INSTANCE"
                  language="Elixir"
                  extensions="ex;exs"/>
    </extensions>

    <extensions defaultExtensionNs="com.redhat.devtools.lsp4ij">
        <server id="expert"
                name="Expert"
                factoryClass="dev.murek.elixirij.lsp.ExpertLanguageServerFactory">
            <description>Expert Language Server for Elixir</description>
        </server>
        <languageMapping language="Elixir" serverId="expert"/>
    </extensions>

    <projectListeners>
        <listener class="dev.murek.elixirij.lsp.ExpertStartupActivity"
                  topic="com.intellij.openapi.startup.ProjectActivity"/>
    </projectListeners>
</idea-plugin>
