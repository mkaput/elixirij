#!/usr/bin/env bash
set -euo pipefail

# Expert Source Cloner
# Clones elixir-lang/expert repository to /tmp/elixir-refs/expert

OUTPUT_ROOT="/tmp/elixir-refs"
OUTPUT_DIR="$OUTPUT_ROOT/expert"
REPO_URL="https://github.com/elixir-lang/expert.git"

# If already cloned then just print the output and quit.
if [ -d "$OUTPUT_DIR" ]; then
    # Print the absolute path to stdout (this is the main output)
    echo "$OUTPUT_DIR"
    exit 0
fi

echo "Cloning Expert source repository..." >&2

# Create output directory if it doesn't exist
mkdir -p "$OUTPUT_ROOT"

# Clone the repository
if ! git clone "$REPO_URL" "$OUTPUT_DIR" 2>&1 | sed 's/^/  /' >&2; then
    echo "Error: Failed to clone Expert repository" >&2
    exit 1
fi

echo "Successfully cloned Expert source repository" >&2

# Print the absolute path to stdout (this is the main output)
echo "$OUTPUT_DIR"
