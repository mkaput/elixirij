#!/usr/bin/env bash
set -euo pipefail

# IntelliJ Platform Source Downloader
# Downloads JetBrains/intellij-community repository tarball to /tmp/elixir-refs/intellij-platform
OUTPUT_ROOT="/tmp/elixir-refs"
OUTPUT_DIR="$OUTPUT_ROOT/intellij-platform"

# If already downloaded then just print the output and quit.
if [ -d "$OUTPUT_DIR" ]; then
    # Print the absolute path to stdout (this is the main output)
    echo "$OUTPUT_DIR"
    exit 0
fi

REPO_TARBALL_URL="https://codeload.github.com/JetBrains/intellij-community/tar.gz/master"

echo "Downloading IntelliJ Platform source tarball..." >&2

# Create output directory if it doesn't exist
mkdir -p "$OUTPUT_ROOT"

tmp_dir="$(mktemp -d)"
tarball="$tmp_dir/intellij-platform.tar.gz"

cleanup() {
    rm -rf "$tmp_dir"
}
trap cleanup EXIT

if ! curl -fsSL "$REPO_TARBALL_URL" -o "$tarball" 2>&1 | sed 's/^/  /' >&2; then
    echo "Error: Failed to download IntelliJ Platform repository tarball" >&2
    exit 1
fi

mkdir -p "$OUTPUT_DIR"
if ! tar -xzf "$tarball" -C "$OUTPUT_DIR" --strip-components=1 2>&1 | sed 's/^/  /' >&2; then
    rm -rf "$OUTPUT_DIR"
    echo "Error: Failed to extract IntelliJ Platform repository tarball" >&2
    exit 1
fi

echo "Successfully downloaded IntelliJ Platform source repository" >&2

# Print the absolute path to stdout (this is the main output)
echo "$OUTPUT_DIR"
